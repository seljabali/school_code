<html>
<%= render :partial => "application/header", :locals => { :title => "Edit Genre"} %>
 
<form action="/genre/update/<%= @genre.id %>" method="post">
<table border="0" cellpadding="5" cellspacing="0">
<tr>
<td><label for="genre_name">Name: </label></td>
<td><input id="genre_name" name="genre[name]" size="40" type="text" value="<%= @genre.name %>"/></td>
</tr>
</table>
<br>
<input name="commit" type="submit" value="Update" />
</form>

</body>
</html>
