<html>
<%= render :partial => "application/header", :locals => { :title => "Enter New Artist"} %>
 
<form action="/artist/create/" method="post">
<table border="0" cellpadding="5" cellspacing="0">
<tr>
<td><label for="artist_name">Name: </label></td>
<td><input id="artist_name" name="artist[name]" size="40" type="text" /></td>
</tr>
<td colspan="2"><label for="artist_bio">Short Bio: </label></td>
</tr>
<tr>
<td colspan="2"><textarea cols="40" id="artist_bio" name="artist[bio]" rows="10"></textarea></td>
</tr>
</table>
<br>
<input name="commit" type="submit" value="Create" />
</form>

</body>
</html>
