<html>
<%= render :partial => "application/header", :locals => { :title => "Enter New Album"} %>

<form action="/album/create/" method="post">
<table border="0" cellpadding="5" cellspacing="0">
<tr>
<td><label for="album_artist_id">Artist: </label></td>
<td><select name="album[artist_id]">
<% @artists.each do |artist| %>
	<option value="<%= artist.id %>">
	<%= artist.name %>
	</option>
<% end %></select></td>
</tr>
<tr>
<td><label for="album_name">Name: </label></td>
<td><input id="album_name" name="album[name]" size="40" type="text" /></td>
</tr>
<td><label for="album_year">Year: </label></td>
<td><input id="album_year" name="album[year]" size="6" type="integer" /></td>
</tr>
<tr>
<td><label for="album_genre">Genre: </label></td>
<td><select name="album[genre_id]">
<% @genres.each do |genre| %>
	<option value="<%= genre.id %>">
	<%= genre.name %>
	</option>
<% end %></select></td>
</tr>
<tr>
<td><label for="album_rating">Rating: </label></td>
<td><input id="album_rating" name="album[rating]" size="3" type="integer" /></td>
</tr>
</table>
<br>
<input name="commit" type="submit" value="Create" />
</form>

</body>
</html>
