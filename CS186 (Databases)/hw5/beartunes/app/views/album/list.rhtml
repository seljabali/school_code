<html>
<%= render :partial => "application/header", :locals => { :title => "Albums"} %>

<table border="0" cellpadding="5" cellspacing="0">
<tr>
<td><h2>Artist</h2></td>
<td><h2>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Album</h2></td>
</tr>

<% @albums.each do |album| %>
	<tr>
	<td><%= link_to album.artist.name, :controller => "artist", :action => "show", :id => album.artist.id %></td>
	<td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to album.name, :action => "show",  :id => album.id %></td>
	</tr>
<% end %>
</table>

<br><br>
<%= link_to "[ create new album ]", :action => "new" %>

</body>
</html>
